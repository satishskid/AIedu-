# ===========================================
# EduAI Tutor Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# REQUIRED: License Management
# ===========================================
VITE_LICENSE_SECRET_KEY=your-super-secret-license-key-here
VITE_ADMIN_PASSWORD=EduAI2024!

# ===========================================
# REQUIRED: Email Service (Choose One)
# ===========================================
# SendGrid (Recommended)
VITE_SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
VITE_FROM_EMAIL=noreply@yourdomain.com
VITE_ADMIN_EMAIL=admin@yourdomain.com

# Mailgun (Alternative)
# VITE_MAILGUN_API_KEY=your-mailgun-api-key
# VITE_MAILGUN_DOMAIN=mg.yourdomain.com

# ===========================================
# OPTIONAL: Analytics & Monitoring
# ===========================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# OPTIONAL: AI Model Configuration
# ===========================================
VITE_HUGGINGFACE_API_KEY=hf_your-huggingface-key
VITE_AI_MODEL_CDN=https://your-cdn.com/models

# ===========================================
# OPTIONAL: Custom Branding
# ===========================================
VITE_APP_NAME="EduAI Tutor"
VITE_COMPANY_NAME="Your Company"
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_WEBSITE_URL=https://yourdomain.com

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
VITE_DEBUG_MODE=false
VITE_MOCK_AI=false
VITE_SKIP_LICENSE_VALIDATION=false

# ===========================================
# NETLIFY SPECIFIC (Set in Netlify Dashboard)
# ===========================================
# LICENSE_SECRET_KEY=your-super-secret-license-key-here
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
# ADMIN_EMAIL=admin@yourdomain.com